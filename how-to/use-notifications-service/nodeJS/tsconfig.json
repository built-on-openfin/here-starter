{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "lib": ["ES2022"],
        "allowJs": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "declaration": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
